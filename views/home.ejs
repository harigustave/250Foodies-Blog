<html>
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>

        <div class="blogs content">
            <h2 style="color: brown;text-decoration: underline;">LIST OF BLOGS</h2>
            <% if (blogs.length>0){%>
                <% blogs.forEach(blog => {%>
                    <h3 class="title">
                        <%= blog.title %>
                    </h3>
                    <p class="snippet">
                        <%= blog.snippet %>
                    </p>
                <%}) %>
            <% } else{ %>
                <h4>Ooops, No Blogs Available...</h4>
                <% } %>
        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>